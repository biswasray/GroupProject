                android:background="@drawable/button0theme"
                android:textColor="#ffeedd"
                android:layout_margin="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <Button
                android:id="@+id/lvl7"
                android:text=" 7 "
